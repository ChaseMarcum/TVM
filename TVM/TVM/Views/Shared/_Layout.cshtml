<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @{var myEquation = new TVM.Models.TwoVarEquation();
      var myEquation2 = new TVM.Models.ThreeVarEquation();
     }
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Engineering Economics", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" id="wrapper">

        <!-- --------------------  Sidebar  -------------------- -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    @{
                        int a = 0;
                        foreach (var equation in myEquation.equationName)
                        {
                            @Html.ActionLink(equation, "Index", "TwoVarEquation", new { index = a }, null)
                            <br />
                            a++;
                        }
                        a = 0;
                        foreach (var equation in myEquation2.equationName)
                        { 
                            @Html.ActionLink(equation, "Index", "ThreeVarEquation", new { index = a}, null)
                            <br />
                            a++;
                        }
                    }
                </li>
            </ul>
        </div>

        <!-- --------------------  Page content  -------------------- -->
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Chase Marcum and John Price</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>