<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @{var myEquation = new TVM.Models.TwoVarEquation();
    var myEquation2 = new TVM.Models.ThreeVarEquation();
    var myEquation3 = new TVM.Models.TimeValueMoney();
    }
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Engineering Economics", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" id="wrapper">

        <!-- --------------------  Sidebar  -------------------- -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <div class="panel-group" id="accordion">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h1 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                                        Chapter 2
                                    </a>
                                </h1>
                            </div>
                            <div id="collapseOne" class="panel-collapse collapse">
                                <div class="panel-body">
                                    
                                    <h4 style="color: white; padding-bottom: 20px;">Two Variable Equations</h4>

                                    @{
                                        var i = 0;
                                        foreach (var ch2Equation2Var in myEquation.equationName)
                                        {
                                            if (myEquation.chapter[i] == 2)
                                            {
                                                @Html.ActionLink(ch2Equation2Var, "Index", "TwoVarEquation", new { index = i }, null)
                                                <br />
                                            }
                                            i++;
                                        }
                                        
                                        <h4 style="color: white; padding-bottom: 20px;">Three Variable Equations</h4>
                                        
                                        i = 0;
                                        foreach (var ch2Equation3Var in myEquation2.equationName)
                                        {
                                            if (myEquation2.chapter[i] == 2)
                                            {
                                                @Html.ActionLink(ch2Equation3Var, "Index", "ThreeVarEquation", new {index = i}, null)
                                                <br />
                                            }
                                            i++;
                                        }
                                    }

                                </div>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h1 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
                                        Chapter 3
                                    </a>
                                </h1>
                            </div>
                            <div id="collapseTwo" class="panel-collapse collapse">
                                <div class="panel-body">
                                    
                                    <h4 style="color: white; padding-bottom: 20px;">Two Variable Equations</h4>

                                    @{
                                        var j = 0;
                                        foreach (var ch3Equation2Var in myEquation.equationName)
                                        {
                                            if (myEquation.chapter[j] == 3)
                                            {
                                                @Html.ActionLink(ch3Equation2Var, "Index", "TwoVarEquation", new { index = j }, null)
                                                <br />
                                            }
                                            j++;
                                        }
                                        
                                        <h4 style="color: white; padding-bottom: 20px;">Three Variable Equations</h4>
                                        
                                        j = 0;
                                        foreach (var ch3Equation3Var in myEquation2.equationName)
                                        {
                                            if (myEquation2.chapter[j] == 3)
                                            {
                                                @Html.ActionLink(ch3Equation3Var, "Index", "ThreeVarEquation", new { index = j }, null)
                                                <br />
                                            }
                                            j++;
                                        }
                                    }

                                </div>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h1 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseThree">
                                        Time Value Money
                                    </a>
                                </h1>
                            </div>
                        </div>
                        <div id="collapseThree" class="panel-collapse collapse">
                            <div class="panel-body">
                                @Html.ActionLink("TimeValueMoney", "Index", "TimeValueMoney")
                            </div>
                        </div>
                    </div>
                    <p style="padding-bottom: 100px"></p>
                </li>
            </ul>
        </div>
        <!-- --------------------  Page content  -------------------- -->
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Chase Marcum and John Price</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>